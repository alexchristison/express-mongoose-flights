<%- include('../partials/header') %>

<section>
    <h1><%= flight.airline %></h1>
    <h3>Airport: <%= flight.airport %></h3>
    <h3>Flight Number: <%= flight.flightNo %></h3>
    <h3>Departs: <%= flight.departs %></h3>
<% if (flight.destinations && flight.destinations.length) { %>
    <section>
      <h2>Destinations</h2>
      <% flight.destinations.forEach(function(destination) { %>
        <div>
          <p>Airport: <%= destination.airport %></p>
          <p>Arrival: <%= destination.arrival %></p>
        </div>
      <% }) %>
    </section>
  <% } else { %>
    <p>No destinations found for this flight.</p>
  <% } %>
  <form method="POST" action="/flights/<%= flight._id %>/destinations">
    <div>
      <label>Airport:</label>
      <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
  </select><br>
    </div>
    <div>
      <label>Arrival:</label>
      <input type="datetime-local" name="arrival" required>
    </div>
    <div>
      <button type="submit">Add Destination</button>
    </div>
  </form>
</section>

  
<%- include('../partials/footer') %>